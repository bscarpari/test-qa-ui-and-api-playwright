{
  "name": "qa-challenge",
  "version": "1.0.0",
  "description": "QA Challenge with Playwright for UI and API testing",
  "scripts": {
    "test:ui": "playwright test --project=ui",
    "test:api": "playwright test --project=api",
    "test:all": "playwright test",
    "debug:ui": "npx playwright test --ui",
    "debug:all": "npx playwright test --debug",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/node": "^20.11.24",
    "dotenv": "^16.4.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
